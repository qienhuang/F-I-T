{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Plan",
  "type": "object",
  "required": ["steps"],
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool", "args", "verify"],
        "properties": {
          "tool": { "type": "string" },
          "args": { "type": "object" },
          "verify": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

